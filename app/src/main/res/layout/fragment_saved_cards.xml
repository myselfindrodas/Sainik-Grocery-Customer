                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="JEFFREY G. GODDARD"
                                    android:textColor="@color/blue"
                                    android:textSize="@dimen/_10ssp"
                                    android:fontFamily="@font/poppins_medium" />
                                <LinearLayout

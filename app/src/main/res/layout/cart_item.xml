<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_gravity="end"
                android:id="@+id/ivDelete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivItemImg"
                android:src="@drawable/delete_red"/>
            <ImageView
                android:id="@+id/ivItemImg"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintStart_toEndOf="@+id/ivItemImg"
                app:layout_constraintBottom_toBottomOf="@+id/ivItemImg"
                app:layout_constraintTop_toTopOf="@+id/ivItemImg">

                <TextView
                    android:id="@+id/tvItemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daawat biryani rice"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPackSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_8sdp"/>
                <!-- android:paddingStart="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_8sdp"-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                   android:layout_marginStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:background="@drawable/rounded_border_orange_bg_btn"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:id="@+id/btnAdd"
                        android:background="@color/white"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/tvCounter"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/poppins_bold"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:id="@+id/btnSub"
                        android:background="@color/white"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:id="@+id/tvItemprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: â‚¹ 150/kg"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>










    </LinearLayout>

</androidx.cardview.widget.CardView>
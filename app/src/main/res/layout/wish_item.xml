<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_125sdp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/btnDeleteitem"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/delete_red"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    app:tint="@color/orange"/>


                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/item" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/lldiscount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:background="@drawable/orange_rounded_shape">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50% Off"
                        android:id="@+id/tvDiscount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium" />


                </LinearLayout>

                </LinearLayout>


            </LinearLayout>



            <TextView
                android:id="@+id/tvItemname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daawat biryani rice"
                android:layout_marginTop="@dimen/_7sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="₹ 150/kg"
                    android:id="@+id/tvPriceOld"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/_9ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="₹ 150/kg"
                    android:id="@+id/tvPrice"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>

           <!-- <TextView
                android:id="@+id/tvItemprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: ₹ 150/kg"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10ssp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/poppins_medium" />
-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/rounded_blue_bg_btn"
                android:fontFamily="@font/poppins_regular"
                android:text="Shop Now"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:textAllCaps="false"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvText" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
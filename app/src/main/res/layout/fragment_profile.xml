<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">


    <include
        android:id="@+id/topnav"
        layout="@layout/topnavbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topnav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/Flimage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center">


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:cardCornerRadius="@dimen/_55sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/orange">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_3sdp"
                            app:cardCornerRadius="@dimen/_40sdp">

                            <ImageView
                                android:id="@+id/PrfImg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY" />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="@dimen/_77sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_55sdp"
                    android:gravity="right|top">

                    <ImageView
                        android:id="@+id/btnDelete"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_profile_camera" />
                </LinearLayout>
            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name*"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12ssp"/>


            <EditText
                android:id="@+id/etFirstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue"
                android:text=""
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name*"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>



            <EditText
                android:id="@+id/etLastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue"
                android:text=""
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number*"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>



            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:text=""
                android:maxLength="10"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue"
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender*"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>



            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:inputType="number"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birthday*"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_12ssp"/>



            <EditText
                android:id="@+id/etDOB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/blue"
                android:backgroundTint="@android:color/darker_gray"
                android:fontFamily="@font/poppins_semibold"/>




            <LinearLayout
                android:id="@+id/llpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password*"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/btnPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/blue"
                        android:text="********"
                        android:textSize="@dimen/_14sdp" />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_below="@+id/btnPassword"
                        android:background="@android:color/darker_gray" />

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/pwdHideBtn"-->
                    <!--                    android:layout_width="@dimen/_20sdp"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_alignParentRight="true"-->
                    <!--                    android:layout_centerInParent="true"-->
                    <!--                    android:src="@drawable/ic_visibilityoff" />-->



                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llchangepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Old Password*"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center">


                    <EditText
                        android:id="@+id/etOldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/blue"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        android:id="@+id/oldpwdHideBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_visibilityoff" />



                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Password*"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center">


                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/blue"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        android:id="@+id/newpwdHideBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_visibilityoff" />



                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password*"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center">


                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/darker_gray"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/blue"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        android:id="@+id/confirmpwdHideBtn"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_visibilityoff" />



                </RelativeLayout>

            </LinearLayout>











            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/rounded_blue_bg_btn"
                android:fontFamily="@font/poppins_regular"
                android:text="Update Profile"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvForgetPass" />



        </LinearLayout>

    </ScrollView>



</RelativeLayout>

</layout>
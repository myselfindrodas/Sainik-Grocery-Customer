<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivItemImg"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_6sdp"
                app:layout_constraintStart_toEndOf="@+id/ivItemImg"
                app:layout_constraintBottom_toBottomOf="@+id/ivItemImg"
                app:layout_constraintTop_toTopOf="@+id/ivItemImg">

                <TextView
                    android:id="@+id/tvItemname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daawat biryani rice"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemAmtTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="1KG"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_10ssp" />
                <TextView
                    android:id="@+id/tvItemQtyTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qty: 1"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
                <TextView
                    android:id="@+id/tvItemprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: â‚¹ 150/kg"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>